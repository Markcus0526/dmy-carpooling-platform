<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout">

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/TITLE_HEIGHT"
	                android:background="@color/TITLE_BACKCOLOR" android:id="@+id/title_layout">
		<TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/txt_title"
		          android:textSize="@dimen/TITLE_FONTSIZE" android:textColor="#FFFFFF" android:gravity="center"
		          android:text="@string/STR_ABOUT_TITLE"/>
		<ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
		             android:layout_centerVertical="true" android:background="@drawable/btn_back"/>
	</RelativeLayout>
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/content_layout"
			android:layout_below="@+id/title_layout" android:background="#f1F1F1">
		<ImageView
				android:layout_width="420px"
				android:layout_height="200px"
				android:id="@+id/img_logo" android:layout_centerHorizontal="true" android:layout_marginTop="30px"
				android:background="#FFFFFF"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/STR_STORY_CONTENT"
				android:id="@+id/txt_contents" android:layout_alignLeft="@+id/img_logo"
				android:layout_alignRight="@+id/img_logo" android:layout_below="@+id/img_logo"
				android:layout_marginTop="30px" android:layout_alignParentBottom="true"
				android:layout_marginBottom="30px" android:textColor="#707070"/>
	</RelativeLayout>
</RelativeLayout>