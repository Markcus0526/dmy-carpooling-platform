<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/parent_layout" android:background="#00000000">

	<RelativeLayout
			android:layout_width="380px"
			android:layout_height="wrap_content" android:id="@+id/content_layout"
			android:background="@drawable/round_frame_dim" android:paddingBottom="30px">
		<ImageView
				android:layout_width="150px"
				android:layout_height="150px"
				android:id="@+id/img_progressor" android:background="@drawable/bk_progress"
				android:layout_centerHorizontal="true" android:layout_marginTop="30px"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="999"
				android:id="@+id/txt_counter" android:textColor="#FFFFFF" android:textSize="27px"
				android:layout_alignTop="@+id/img_progressor" android:layout_alignLeft="@+id/img_progressor"
				android:layout_alignBottom="@+id/img_progressor" android:layout_alignRight="@+id/img_progressor"
				android:gravity="center" android:singleLine="true"/>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txt_message" android:layout_below="@+id/img_progressor"
				android:layout_marginLeft="20px" android:layout_marginRight="20px" android:gravity="center"
				android:textColor="#FFFFFF" android:textSize="27px" android:layout_marginTop="30px"/>
	</RelativeLayout>
</RelativeLayout>