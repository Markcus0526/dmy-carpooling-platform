<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/parent_layout"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:gravity="center_horizontal">
    <!--标题 -->
    <!--标题 -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TITLE_HEIGHT" android:background="@color/TABCOLOR"
            android:id="@+id/title_layout">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/STR_SINGLEDETAIL_TITLE"
                android:id="@+id/txt_title" android:gravity="center" android:textColor="#FFFFFF"
                android:textSize="@dimen/TITLE_FONTSIZE"/>
        <ImageButton
                android:layout_width="50px"
                android:layout_height="50px"
                android:id="@+id/btn_back" android:layout_centerVertical="true"
                android:background="@drawable/btn_back"/>
        <ImageButton
                android:layout_width="40px"
                android:layout_height="40px"
                android:id="@+id/btn_refresh" android:layout_centerVertical="true" android:layout_marginRight="20px"
                android:layout_alignParentRight="true" android:background="@drawable/bk_refresh"/>

    </RelativeLayout>
    <!--首页详情 -->
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center_horizontal">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

                  android:id="@+id/info_layout"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/driver_info_layout">
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/driver_image_layout"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px">
                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView"
                      android:id="@+id/img_photo"
                      android:scaleType="fitXY"/>
                <ImageButton android:layout_width="100px" android:layout_height="100px"
                             android:id="@+id/btnPhoto" android:layout_alignTop="@+id/imgPhoto"
                             android:layout_alignLeft="@+id/imgPhoto" android:layout_alignBottom="@+id/imgPhoto"
                             android:layout_alignRight="@+id/imgPhoto" android:background="@drawable/btn_frame"
                        />
                <ImageView android:layout_width="100px"
                           android:layout_height="100px"
                           android:id="@+id/image_around"
                           android:background="@drawable/photo_frame"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30px"
                        android:layout_alignBottom="@+id/img_photo"
                        android:layout_alignLeft="@+id/img_photo"
                        android:layout_alignRight="@+id/img_photo">
                    <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:id="@+id/imgSex" android:layout_marginLeft="29px" android:layout_centerVertical="true"
                            android:scaleType="fitCenter" android:src="@drawable/bk_manmark"/>
                    <TextView
                            android:layout_width="35px"
                            android:layout_height="fill_parent"
                            android:text="@string/STR_ORDERCONFIRM_DRIVERAGE"
                            android:id="@+id/lblAge" android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="15px"
                            android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView android:layout_width="80px"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="10px"
                      android:layout_marginTop="10px"
                      android:layout_marginLeft="40px"
                      android:id="@+id/driver_name"
                      android:textColor="@color/GRAY_COLOR"
                      android:textSize="18px"
                      android:text="@string/STR_ORDERCONFIRM_DRIVERNAME"
                      android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20px"
                      android:layout_marginTop="20px"
                      android:orientation="vertical"
                      android:id="@+id/detail_layout">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/STR_ORDERCONFIRM_DRIVERDUR"
                      android:textSize="20px"
                      android:textColor="@color/GRAY_COLOR"
                      android:id="@+id/driver_duration"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/STR_ORDERCONFIRM_DRIVEREVA"
                      android:textSize="28px"
                      android:textColor="@color/LIGHT_YELLOW_COLOR"
                      android:layout_marginTop="10px"
                      android:id="@+id/driver_evaluation"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/STR_ORDERCONFIRM_DRIVERDUR"
                          android:textSize="20px"
                          android:layout_marginTop="10px"
                          android:textColor="@color/GRAY_COLOR"
                          android:orientation="horizontal"
                          android:id="@+id/service_time">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/STR_ORDERCONFIRM_DRIVERTIME"
                          android:textSize="20px"
                          android:textColor="@color/GRAY_COLOR"
                          android:id="@+id/service_time_note"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/STR_ORDERCONFIRM_DRIVERACTTIME"
                          android:textSize="20px"
                          android:textColor="@color/LIGHT_YELLOW_COLOR"
                          android:id="@+id/service_time_detail"/>
            </LinearLayout>
            <LinearLayout android:layout_width="200px"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10px"
                          android:orientation="horizontal"
                          android:id="@+id/car_detail">
                <ImageView android:layout_width="50px"
                           android:layout_height="25px"
                           android:background="@drawable/first_car_green"
                           android:id="@+id/car_type"/>
                <TextView android:layout_width="wrap_content"
                           android:layout_height="25px"
                           android:textSize="20px"
                           android:textColor="@color/TITLE_BACKCOLOR"
                           android:layout_marginLeft="10px"
                           android:id="@+id/car_logo"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="25px"
                          android:text="@string/STR_ORDERCONFIRM_CARNAME"
                          android:textSize="15px"
                          android:textColor="@color/WHITE_COLOR"
                          android:padding = "2px"
                          android:background="@color/TITLE_BACKCOLOR"
                          android:layout_marginLeft="10px"
                          android:id="@+id/car_name"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="25px"
                          android:text="@string/STR_ORDERCONFIRM_CARCOLOR"
                          android:textSize="20px"
                          android:textColor="@color/TITLE_BACKCOLOR"
                          android:layout_marginLeft="10px"
                          android:id="@+id/car_color"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/car_image_layout"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px">
            <view android:layout_width="100px"
                  android:layout_height="100px"
                  class="com.damytech.Utils.image.SmartImageView"
                  android:id="@+id/img_car"
                  android:scaleType="fitXY"/>
            <ImageButton android:layout_width="100px" android:layout_height="100px" android:id="@+id/btnCar"
                         android:layout_alignTop="@+id/imgPhoto" android:layout_alignLeft="@+id/imgPhoto"
                         android:layout_alignBottom="@+id/imgPhoto" android:layout_alignRight="@+id/imgPhoto"
                         android:background="@drawable/btn_frame"/>

        </RelativeLayout>

    </LinearLayout>
    <ImageView android:layout_width="fill_parent"
               android:layout_height="5px"
               android:layout_marginLeft="10px"
               android:layout_marginRight="10px"
               android:layout_marginTop="10px"
               android:layout_marginBottom="10px"
               android:background="@drawable/lvdian_header"
               android:id="@+id/divider"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  >
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="30px"
                              android:text="@string/STR_SINGLEDETAIL_ORDERNUM"
                              android:textSize="18px"
                              android:textColor="@color/GRAY_COLOR"
                              android:layout_marginBottom="10px"
                              android:layout_marginTop="10px"
                              android:gravity="left|center_vertical"
                              android:id="@+id/order_num"
                              android:layout_marginRight="20px"/>
                    <Button
                            android:layout_width="120px"
                            android:layout_marginBottom="10px"
                            android:layout_marginTop="10px"
                            android:layout_height="40px"
                            android:text="保单详情"
                            android:id="@+id/insurance_detail"
                            android:textSize="19px" android:textColor="@color/TITLE_BACKCOLOR"
                            android:gravity="center"
                            android:paddingLeft="5px"
                            android:drawableLeft="@drawable/insurance_icon"
                            android:background="@drawable/btn_fee"/>

    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/STR_SINGLEDETAIL_ADDRESS"
              android:layout_marginLeft="40px"
              android:layout_marginRight="40px"
              android:textSize="20px"
              android:textColor="@color/GRAY_COLOR"
              android:gravity="center_horizontal"
              android:layout_marginBottom="10px"
              android:id="@+id/address"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/STR_SINGLEDETAIL_ORDERTIME"
              android:textSize="20px"
              android:textColor="@color/GRAY_COLOR"
              android:layout_marginBottom="10px"
              android:id="@+id/order_time"
              android:visibility="gone"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/STR_SINGLEDETAIL_WORKTIME"
              android:textSize="20px"
              android:textColor="@color/GRAY_COLOR"
              android:layout_marginBottom="10px"
              android:id="@+id/work_time"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/STR_SINGLEDETAIL_POINTS"
              android:textSize="20px"
              android:textColor="@color/GRAY_COLOR"
              android:layout_marginBottom="10px"
              android:visibility="gone"
              android:id="@+id/points" android:paddingRight="10px" android:paddingLeft="10px"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" android:id="@+id/rlCarNo">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/STR_SINGLEDETAIL_CARINFO"
                          android:textSize="20px"
                          android:textColor="@color/GRAY_COLOR"
                          android:layout_marginBottom="10px"
                          android:id="@+id/car_info"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/STR_SINGLEDETAIL_TICKT"
                          android:textSize="20px"
                          android:textColor="@color/GRAY_COLOR"
                          android:layout_marginBottom="10px"
                          android:id="@+id/ticket"
                          android:layout_marginLeft="50px"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10px"
              android:layout_marginLeft="10px"
              android:text="@string/STR_SINGLEDETAIL_ORDERSTATE"
              android:textSize="30px"
              android:textColor="@color/LIGHT_YELLOW_COLOR"
              android:layout_marginBottom="10px"
              android:id="@+id/order_state"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  android:background="@color/LIGHT_GRAY_COLOR"
                  android:padding="10px">
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                               <RelativeLayout android:layout_width="150px"
                                               android:layout_height="150px">
                                               <Button android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:background="@drawable/bk_passphone"
                                                       android:id="@+id/left_function"/>
                                                <TextView android:layout_width="wrap_content"
                                                          android:layout_height="wrap_content"
                                                          android:id="@+id/left_function_text"/>
                                </RelativeLayout>
                                <RelativeLayout android:layout_width="150px"
                                                android:layout_height="150px"
                                                android:layout_marginLeft="100px">
                                                <Button android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:background="@drawable/bk_exitorder"
                                                        android:id="@+id/right_function"/>
                                                <TextView android:layout_width="wrap_content"
                                                          android:layout_height="wrap_content"
                                                          android:id="@+id/right_function_text"/>
                                </RelativeLayout>
                </LinearLayout>
                <Button android:layout_width="400px"
                        android:layout_height="50px"
                        android:layout_marginTop="10px"
                        android:text="@string/STR_SINGLEDETAIL_CANCEL"
                        android:textSize="20px"
                        android:textColor="@color/TITLE_BACKCOLOR"
                        android:id="@+id/cancel"
                        android:background="@drawable/btn_white"/>
                <Button android:layout_width="400px"
                        android:layout_height="50px"
                        android:layout_marginTop="10px"
                        android:text="@string/STR_SINGLEDETAIL_CALL"
                        android:textSize="20px"
                        android:textColor="@color/WHITE_COLOR"
                        android:id="@+id/call"
                        android:background="@drawable/roundsolidgreen_frame"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
	