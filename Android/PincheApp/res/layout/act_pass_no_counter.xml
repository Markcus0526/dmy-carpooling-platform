<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/parent_layout"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="30px"
                android:background="@color/LIGHT_GRAY_COLOR">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/failicon"
                           android:layout_marginBottom="20px"
                           android:id="@+id/img_logo"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/GRAY_COLOR"
                          android:textSize="35px"
                          android:text="@string/STR_NOCOUNTER_POINTS"
                          android:id="@+id/points"
                          android:layout_marginBottom="10px"
                          android:visibility="gone"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/LIGHT_YELLOW_COLOR"
                          android:textSize="35px"
                          android:text="@string/STR_NOCOUNTER_TIP1"
                          android:id="@+id/tip1"
                          android:layout_marginBottom="10px"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/LIGHT_YELLOW_COLOR"
                          android:textSize="35px"
                          android:text="@string/STR_NOCOUNTER_TIP2"
                          android:id="@+id/tip2"
                          android:layout_marginBottom="30px"/>
                <RelativeLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_horizontal"
                              android:layout_marginBottom="50px"
                        >


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/account_layout"
                              android:orientation="horizontal"
                              android:layout_marginBottom="10px">
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/GRAY_COLOR"
                                      android:textSize="30px"
                                      android:text="@string/STR_NOCOUNTER_ACCOUNT"
                                      android:id="@+id/account_txt"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/RED_COLOR"
                                      android:textSize="30px"
                                      android:text="@string/STR_NOCOUNTER_ACCOUNTDETAIL"
                                      android:id="@+id/account_detail"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/cost_layout"
                              android:layout_below="@+id/account_layout"
                              android:layout_alignLeft="@+id/account_layout"
                              android:orientation="horizontal"
                              >
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/GRAY_COLOR"
                                      android:textSize="30px"
                                      android:text="@string/STR_NOCOUNTER_COST"
                                      android:id="@+id/cost_txt"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textColor="@color/RED_COLOR"
                                      android:textSize="30px"
                                      android:text="@string/STR_NOCOUNTER_COSTDETAIL"
                                      android:id="@+id/cost_detail"/>
                </LinearLayout>

                </RelativeLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/choose_layout"
                              android:orientation="horizontal">
                            <Button android:layout_width="180px"
                                      android:layout_height="80px"
                                      android:textColor="@color/TITLE_BACKCOLOR"
                                      android:layout_marginRight="30px"
                                      android:textSize="30px"
                                      android:text="@string/STR_NOCOUNTER_CONFIRM"
                                      android:background="@drawable/bk_smallwhite_normal"
                                      android:id="@+id/confirm"/>
                            <Button android:layout_width="180px"
                                      android:layout_height="80px"
                                      android:textColor="@color/WHITE_COLOR"
                                      android:textSize="30px"
                                      android:text="@string/STR_NOCOUNTER_FILLIN"
                                      android:id="@+id/fillin"
                                      android:background="@drawable/btn_green_normal"/>
                </LinearLayout>
</LinearLayout>
