<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout">

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/TITLE_HEIGHT"
	                android:background="@color/TITLE_BACKCOLOR" android:id="@+id/title_layout">
		<TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/txt_title"
		          android:textSize="@dimen/TITLE_FONTSIZE" android:textColor="#FFFFFF" android:gravity="center"
		          android:text="@string/STR_CONFIRMORDER_TITLE"/>
		<ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
		             android:layout_centerVertical="true" android:background="@drawable/btn_back"/>
	</RelativeLayout>
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_below="@+id/title_layout"
			android:id="@+id/content_layout" android:background="#F1F1F1">
        <view android:layout_width="120px"
              android:layout_height="120px"
              class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewPhoto"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_marginLeft="40px" android:layout_marginTop="30px" android:scaleType="fitXY"
		        />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPhoto" android:layout_alignTop="@+id/viewPhoto"
                android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto"
                android:layout_alignBottom="@+id/viewPhoto" android:background="@drawable/btn_frame"
                android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                android:layout_marginBottom="-5px"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30px" android:layout_alignBottom="@+id/viewPhoto"
                android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto">
            <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:id="@+id/imgSex" android:layout_marginLeft="36px" android:layout_centerVertical="true"
                    android:scaleType="fitCenter"/>
            <TextView
                    android:layout_width="35px"
                    android:layout_height="fill_parent"
                    android:id="@+id/lblAge" android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="25px"
                    android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="35px"
                android:layout_height="35px"
                android:id="@+id/imgSecurity"
                android:scaleType="fitCenter"
                android:layout_alignTop="@+id/viewPhoto"
                android:layout_toRightOf="@+id/viewPhoto" android:layout_marginLeft="50px"
                android:layout_marginTop="15px"/>
        <TextView
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:id="@+id/lblSecurity" android:layout_alignTop="@+id/imgSecurity"
                android:layout_toRightOf="@+id/imgSecurity" android:layout_alignBottom="@+id/imgSecurity"
                android:layout_marginLeft="25px" android:gravity="center_vertical|left"
                android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:text="@string/STR_PASSENGERINFO_EVALRATIO"
                android:id="@+id/lblRatio" android:layout_below="@+id/lblSecurity"
                android:layout_alignLeft="@+id/lblSecurity" android:layout_alignRight="@+id/lblSecurity"
                android:layout_marginTop="20px" android:gravity="center_vertical|left"
                android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:text="@string/STR_PASSENGERINFO_CARPOOLCOUNT"
                android:id="@+id/lblCarpoolCount" android:layout_below="@+id/lblRatio"
                android:layout_alignLeft="@+id/lblRatio" android:layout_alignRight="@+id/lblRatio"
                android:layout_marginTop="10px" android:gravity="center_vertical|left"
                android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:id="@+id/lblName" android:layout_below="@+id/viewPhoto"
                android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/btnPhoto"
                android:layout_marginTop="10px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                android:textSize="18px"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_below="@+id/lblName"
                android:layout_centerHorizontal="true" android:layout_marginTop="10px"
                android:background="#F1F1F1" android:id="@+id/rlShangBian" android:layout_marginBottom="10px">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1px" android:layout_marginLeft="30px" android:layout_marginRight="30px"
                    android:background="@color/GRAY_COLOR" android:id="@+id/relativeLayout">
            </RelativeLayout>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblPath" android:layout_below="@+id/relativeLayout"
                    android:layout_centerHorizontal="true" android:layout_marginTop="20px" android:gravity="center"
                    android:textColor="@color/GRAY_COLOR" android:textSize="24px"
                    android:layout_marginLeft="10px" android:layout_marginRight="10px" android:singleLine="false"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblMidStation" android:layout_below="@+id/lblMon"
                    android:layout_centerHorizontal="true" android:textSize="21px"
                    android:textColor="@color/GRAY_COLOR" android:layout_marginTop="10px" android:gravity="center"
                    android:singleLine="false" android:ellipsize="end" android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"/>
            <TextView
                    android:layout_width="100px"
                    android:layout_height="40px"
                    android:id="@+id/lblMark" android:layout_below="@+id/lblMidStation"
                    android:layout_marginTop="10px" android:layout_marginLeft="130px" android:gravity="center_vertical|right"
                    android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="24px"/>
            <TextView
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblSiteMark" android:layout_alignTop="@+id/lblMark"
                    android:layout_toRightOf="@+id/lblMark" android:layout_alignBottom="@+id/lblMark"
                    android:textSize="21px" android:textColor="@color/GRAY_COLOR" android:gravity="center_vertical|left"
                    android:layout_marginLeft="10px"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:id="@+id/lblMon"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="20px" android:gravity="center"
                    android:text="@string/STR_MON" android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"
                    android:background="@drawable/bk_normday" android:layout_below="@+id/lblPath"
                    android:layout_marginTop="10px"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:text="@string/STR_TUE"
                    android:id="@+id/lblTue" android:layout_alignTop="@+id/lblMon"
                    android:layout_toRightOf="@+id/lblMon" android:layout_marginLeft="15px"
                    android:background="@drawable/bk_normday" android:gravity="center"
                    android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:text="@string/STR_WED"
                    android:id="@+id/lblWed" android:layout_alignTop="@+id/lblTue"
                    android:layout_toRightOf="@+id/lblTue" android:textColor="@color/TITLE_BACKCOLOR"
                    android:textSize="21px" android:gravity="center" android:background="@drawable/bk_normday"
                    android:layout_marginLeft="15px"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:text="@string/STR_THR"
                    android:id="@+id/lblThu" android:layout_alignTop="@+id/lblWed"
                    android:layout_toRightOf="@+id/lblWed" android:layout_marginLeft="15px"
                    android:background="@drawable/bk_normday" android:gravity="center"
                    android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:text="@string/STR_FRI"
                    android:id="@+id/lblFri" android:layout_alignTop="@+id/lblThu"
                    android:layout_toRightOf="@+id/lblThu" android:textSize="21px"
                    android:textColor="@color/TITLE_BACKCOLOR" android:gravity="center"
                    android:background="@drawable/bk_normday" android:layout_marginLeft="15px"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:text="@string/STR_SAT"
                    android:id="@+id/lblSat" android:layout_alignTop="@+id/lblFri"
                    android:layout_toRightOf="@+id/lblFri" android:layout_marginLeft="15px"
                    android:background="@drawable/bk_normday" android:gravity="center" android:textSize="21px"
                    android:textColor="@color/TITLE_BACKCOLOR"/>
            <TextView
                    android:layout_width="50px"
                    android:layout_height="30px"
                    android:text="@string/STR_SUN"
                    android:id="@+id/lblSun" android:layout_alignTop="@+id/lblSat"
                    android:layout_toRightOf="@+id/lblSat" android:layout_marginLeft="15px"
                    android:background="@drawable/bk_normday" android:gravity="center"
                    android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"/>
            <TextView
                    android:layout_width="90px"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblTime" android:layout_alignTop="@+id/lblMark"
                    android:layout_alignParentLeft="true" android:layout_alignBottom="@+id/lblMark"
                    android:layout_marginLeft="30px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                    android:textSize="18px"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_below="@+id/rlShangBian"
                android:background="@color/BASE_BACK_COLOR" android:id="@+id/rlXiaBian">
            <view android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  class="com.baidu.mapapi.map.MapView" android:id="@+id/viewMap" android:layout_alignParentTop="true"
                  android:layout_alignParentLeft="true"/>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/rlMapView"
                    >
                <Button
                        android:layout_width="440px"
                        android:layout_height="60px"
                        android:text="@string/STR_CONFIRMORDER_QIANGDAN"
                        android:id="@+id/btnOrder" android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20px" android:layout_centerHorizontal="true"
                        android:background="@drawable/btn_green" android:textColor="@color/WHITE_COLOR"
                        android:textSize="30px"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
	                android:layout_height="match_parent" android:id="@+id/success_layout" android:background="#40000000"
	                android:gravity="center" android:visibility="gone">
		<RelativeLayout android:layout_width="400px" android:layout_height="250px"
		                android:background="@drawable/roundwhitewhite_frame">
			<ImageView android:layout_width="102px" android:layout_height="96px" android:id="@+id/imgIcon"
			           android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
			           android:layout_marginTop="30px" android:scaleType="fitCenter"
			           android:src="@drawable/bk_commutewaiting"/>
			<TextView android:layout_width="320px" android:layout_height="40px" android:id="@+id/lblHint1"
			          android:layout_below="@+id/imgIcon" android:layout_centerHorizontal="true"
			          android:layout_marginTop="20px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
			          android:textSize="24px" android:text="@string/STR_COMMUTEORDERING_HINT1"/>
			<TextView android:layout_width="320px" android:layout_height="40px"
			          android:text="@string/STR_COMMUTEORDERING_HINT2" android:id="@+id/lblHint2"
			          android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
			          android:layout_marginBottom="20px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
			          android:textSize="24px"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>