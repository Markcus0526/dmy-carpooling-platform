<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout" android:background="#FFFFFF">
    <!--标题 -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TITLE_HEIGHT" android:background="@color/TABCOLOR"
            android:id="@+id/title_layout">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/STR_CITYCARPOOLSEARCH_COMMUTE"
                android:id="@+id/txt_title" android:gravity="center" android:textColor="#FFFFFF"
                android:textSize="@dimen/TITLE_FONTSIZE"/>
        <ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
                     android:layout_centerVertical="true" android:background="@drawable/btn_back"/>
    </RelativeLayout>
    <!--首页详情 -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/title_layout"
            android:id="@+id/content_layout" android:layout_above="@+id/tab_layout">
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="150px"
                        android:layout_height="100px"
                        android:id="@+id/imgIcon" android:scaleType="fitCenter" android:src="@drawable/icondemo"
                        android:layout_centerHorizontal="true" android:layout_marginTop="20px"/>
                <TextView
                        android:layout_width="350px"
                        android:layout_height="35px"
                        android:text="@string/STR_SINGERSUCCESS_SECCUSS"
                        android:id="@+id/lblHint" android:gravity="center" android:layout_below="@+id/imgIcon"
                        android:layout_centerHorizontal="true" android:layout_marginTop="20px"
                        android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="24px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1px" android:layout_marginLeft="20px" android:layout_marginRight="20px"
                        android:background="@color/GRAY_COLOR" android:layout_below="@+id/lblHint"
                        android:layout_marginTop="20px" android:id="@+id/rlSeparateTop">
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35px"
                        android:id="@+id/lblHint1" android:layout_marginLeft="20px" android:layout_marginTop="30px"
                        android:layout_marginRight="20px" android:layout_below="@+id/rlSeparateTop"
                        android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
                        android:textColor="@color/GRAY_COLOR" android:textSize="24px" android:gravity="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:text="@string/STR_SINGERSUCCESS_FORGETINFO"
                        android:id="@+id/lblHint2" android:layout_marginTop="20px"
                        android:layout_alignLeft="@+id/lblHint1" android:layout_alignRight="@+id/lblHint1"
                        android:layout_below="@+id/lblHint1" android:gravity="center"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1px" android:layout_alignLeft="@+id/rlSeparateTop"
                        android:layout_alignRight="@+id/rlSeparateTop" android:layout_marginTop="20px"
                        android:layout_below="@+id/lblHint2" android:id="@+id/rlSeparateBottom"
                        android:background="@color/GRAY_COLOR">
                </RelativeLayout>
                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewPhoto"
                      android:layout_alignParentLeft="true"
                      android:layout_marginLeft="40px" android:layout_marginTop="30px" android:scaleType="fitXY"
                      android:layout_below="@+id/rlSeparateBottom"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnPhoto" android:layout_alignTop="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto"
                        android:layout_alignBottom="@+id/viewPhoto" android:background="@drawable/btn_frame"
                        android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                        android:layout_marginBottom="-5px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30px" android:layout_alignBottom="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto">
                    <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:id="@+id/imgSex" android:layout_marginLeft="26px" android:layout_centerVertical="true"
                            android:scaleType="fitCenter" android:src="@drawable/bk_manmark"/>
                    <TextView
                            android:layout_width="35px"
                            android:layout_height="fill_parent"
                            android:id="@+id/lblAge" android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="10px"
                            android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:id="@+id/lblName" android:layout_below="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/btnPhoto"
                        android:layout_marginTop="20px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                        android:textSize="18px"/>
                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewCar"
                      android:layout_alignTop="@+id/viewPhoto" android:layout_alignParentRight="true"
                      android:layout_marginRight="40px" android:scaleType="fitXY"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCar" android:layout_alignTop="@+id/viewCar"
                        android:layout_alignLeft="@+id/viewCar" android:layout_alignBottom="@+id/viewCar"
                        android:layout_alignRight="@+id/viewCar" android:background="@drawable/btn_frame"
                        android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                        android:layout_marginBottom="-5px"/>
                <ImageView
                        android:layout_width="60px"
                        android:layout_height="25px"
                        android:id="@+id/imgCarType"
                        android:layout_toRightOf="@+id/lblName" android:layout_marginLeft="60px" android:scaleType="fitCenter"
                        android:src="@drawable/luxurycar_sel" android:layout_below="@+id/viewPhoto"
                        android:layout_marginTop="20px"/>
                <ImageView
                        android:layout_width="25px"
                        android:layout_height="25px"
                        android:id="@+id/imgBrand" android:layout_alignTop="@+id/imgCarType"
                        android:layout_toRightOf="@+id/imgCarType" android:layout_marginLeft="10px"
                        android:scaleType="fitCenter" android:src="@drawable/bk_carbrand1"/>
                <TextView
                        android:layout_width="60px"
                        android:layout_height="25px"
                        android:id="@+id/lblBrandName" android:layout_alignTop="@+id/imgBrand"
                        android:layout_toRightOf="@+id/imgBrand" android:layout_marginLeft="10px" android:gravity="center"
                        android:background="@drawable/roundsolidgreen_frame" android:textColor="@color/WHITE_COLOR"
                        android:textSize="14px"/>
                <TextView
                        android:layout_width="60px"
                        android:layout_height="25px"
                        android:id="@+id/lblColor" android:layout_alignTop="@+id/lblBrandName"
                        android:layout_toRightOf="@+id/lblBrandName" android:layout_marginLeft="10px" android:gravity="center"
                        android:textColor="@color/TITLE_BACKCOLOR" android:textSize="18px"/>

                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:id="@+id/lblMon"
                        android:layout_alignParentLeft="true" android:layout_marginLeft="20px" android:gravity="center"
                        android:text="@string/STR_MON" android:textColor="@color/WHITE_COLOR" android:textSize="21px"
                        android:layout_below="@+id/lblName"
                        android:layout_marginTop="20px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_TUE"
                        android:id="@+id/lblTue" android:layout_alignTop="@+id/lblMon"
                        android:layout_toRightOf="@+id/lblMon" android:layout_marginLeft="15px"
                        android:gravity="center"
                        android:textColor="@color/WHITE_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_WED"
                        android:id="@+id/lblWed" android:layout_alignTop="@+id/lblTue"
                        android:layout_toRightOf="@+id/lblTue" android:textColor="@color/WHITE_COLOR"
                        android:textSize="21px" android:gravity="center"
                        android:layout_marginLeft="15px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_THR"
                        android:id="@+id/lblThr" android:layout_alignTop="@+id/lblWed"
                        android:layout_toRightOf="@+id/lblWed" android:layout_marginLeft="15px"
                        android:gravity="center"
                        android:textColor="@color/WHITE_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_FRI"
                        android:id="@+id/lblFri" android:layout_alignTop="@+id/lblThr"
                        android:layout_toRightOf="@+id/lblThr" android:textSize="21px"
                        android:textColor="@color/TITLE_BACKCOLOR" android:gravity="center"
                        android:layout_marginLeft="15px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_SAT"
                        android:id="@+id/lblSat" android:layout_alignTop="@+id/lblFri"
                        android:layout_toRightOf="@+id/lblFri" android:layout_marginLeft="15px"
                        android:gravity="center" android:textSize="21px"
                        android:textColor="@color/TITLE_BACKCOLOR"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_SUN"
                        android:id="@+id/lblSun" android:layout_alignTop="@+id/lblSat"
                        android:layout_toRightOf="@+id/lblSat" android:layout_marginLeft="15px"
                        android:gravity="center"
                        android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblStartTime" android:layout_below="@+id/lblMon" android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true" android:gravity="center"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblPath" android:textSize="21px" android:textColor="@color/GRAY_COLOR"
                        android:gravity="center" android:layout_centerHorizontal="true"
                        android:layout_below="@+id/lblStartTime" android:layout_marginTop="20px"/>
                <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblMidPoints" android:layout_marginTop="20px" android:layout_below="@+id/lblPath"
                        android:layout_centerHorizontal="true" android:gravity="center"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblCarNo" android:textSize="21px" android:textColor="@color/GRAY_COLOR"
                        android:gravity="center" android:layout_below="@+id/lblMidPoints"
                        android:layout_centerHorizontal="true" android:layout_marginTop="20px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_below="@+id/lblCarNo"
                        android:background="@color/LIGHT_GRAY_COLOR" android:layout_marginTop="20px">
                    <TextView
                            android:layout_width="400px"
                            android:layout_height="100px"
                            android:text="@string/STR_SINGERSUCCESS_HINT"
                            android:id="@+id/lblHint3" android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" android:layout_marginTop="20px"
                            android:gravity="center" android:textColor="@color/LIGHT_YELLOW_COLOR"
                            android:textSize="21px"/>
                    <Button
                            android:layout_width="400px"
                            android:layout_height="60px"
                            android:text="@string/STR_SINGERSUCCESS_TODETAIL"
                            android:id="@+id/btnToDetail" android:textColor="@color/WHITE_COLOR" android:textSize="24px"
                            android:layout_below="@+id/lblHint3" android:layout_centerHorizontal="true"
                            android:background="@drawable/btn_green" android:layout_marginTop="20px"/>
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="20px" android:layout_below="@+id/btnToDetail">
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
	