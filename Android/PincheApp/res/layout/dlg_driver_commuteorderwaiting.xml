<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout"
                android:background="#60000000" android:gravity="center">

    <RelativeLayout
            android:layout_width="400px"
            android:layout_height="250px"
            android:background="@drawable/roundwhitewhite_frame">
        <ImageView
                android:layout_width="102px"
                android:layout_height="96px"
                android:id="@+id/imgIcon" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_marginTop="30px" android:scaleType="fitCenter" android:src="@drawable/bk_commutewaiting"/>
        <TextView
                android:layout_width="320px"
                android:layout_height="40px"
                android:id="@+id/lblHint1" android:layout_below="@+id/imgIcon" android:layout_centerHorizontal="true"
                android:layout_marginTop="20px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                android:textSize="24px" android:text="@string/STR_COMMUTEORDERING_HINT1"/>
        <TextView
                android:layout_width="320px"
                android:layout_height="40px"
                android:text="@string/STR_COMMUTEORDERING_HINT2"
                android:id="@+id/lblHint2" android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" android:layout_marginBottom="20px" android:gravity="center"
                android:textColor="@color/GRAY_COLOR" android:textSize="24px"/>
    </RelativeLayout>
</RelativeLayout>