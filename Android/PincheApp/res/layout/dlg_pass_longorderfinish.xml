<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/parent_layout"
                android:background="@drawable/roundwhitewhite_frame" android:gravity="center">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundwhitewhite_frame" android:paddingBottom="20px">
	    <RelativeLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:layout_marginTop="30px"
			    android:layout_centerHorizontal="true" android:id="@+id/title_layout">
		    <ImageView
	                android:layout_width="60px"
	                android:layout_height="60px"
	                android:id="@+id/imgHelp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
	                android:scaleType="fitCenter"
	                android:src="@drawable/bk_help"/>
		    <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/STR_COMMUTEORDERFINISH_TITLE"
	                android:id="@+id/lblTitle" android:layout_alignTop="@+id/imgHelp"
	                android:layout_toRightOf="@+id/imgHelp" android:layout_alignBottom="@+id/imgHelp"
	                android:gravity="center_vertical|left"
	                android:textColor="@color/GRAY_COLOR" android:textSize="21px" android:layout_marginLeft="20px"/>
	    </RelativeLayout>
	    <LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="match_parent"
			    android:layout_height="60px" android:id="@+id/content_layout"
			    android:layout_centerHorizontal="true" android:layout_below="@+id/title_layout"
			    android:layout_marginLeft="20px" android:layout_marginRight="20px" android:layout_marginTop="20px">
		    <Button
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:text="@string/STR_QUEDING"
	                android:id="@+id/btnOk" android:layout_below="@+id/imgHelp" android:layout_alignParentLeft="true"
	                android:background="@drawable/roundsolidgreen_frame" android:textColor="@color/WHITE_COLOR"
	                android:textSize="21px" android:layout_weight="3"/>
		    <RelativeLayout
				    android:layout_width="0dp"
				    android:layout_height="match_parent" android:layout_weight="1">
		    </RelativeLayout>
		    <Button
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:text="@string/STR_QUXIAO"
	                android:id="@+id/btnCancel" android:layout_alignTop="@+id/btnOk" android:layout_alignParentRight="true"
	                android:textSize="21px" android:textColor="@color/TITLE_BACKCOLOR"
	                android:background="@drawable/roundgreenwhite_frame" android:layout_weight="3"/>
	    </LinearLayout>
	    <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" android:layout_centerHorizontal="true"
			    android:layout_below="@+id/content_layout" android:layout_marginLeft="10px"
			    android:layout_marginRight="10px" android:layout_marginTop="20px">
		    <TextView
	                android:layout_width="80px"
	                android:layout_height="30px"
	                android:text="@string/STR_COMMUTEORDERFINISH_HINT"
	                android:id="@+id/lblHint" android:layout_alignParentLeft="true"
	                android:gravity="left|top"
	                android:textColor="@color/GRAY_COLOR" android:textSize="18px"/>
		    <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/STR_DRVLONGORDERFINISH_HINT"
	                android:id="@+id/lblHintVal" android:layout_alignTop="@+id/lblHint"
	                android:layout_toRightOf="@+id/lblHint" android:layout_alignParentRight="true"
	                android:gravity="left|top" android:textColor="@color/GRAY_COLOR"
	                android:textSize="18px"/>
	    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>