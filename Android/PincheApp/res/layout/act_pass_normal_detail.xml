<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout" android:background="#FFFFFF">
    <!--标题 -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TITLE_HEIGHT" android:background="@color/TABCOLOR"
            android:id="@+id/title_layout">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/STR_COMMUTEORDERDETAIL_TITLE"
                android:id="@+id/txt_title" android:gravity="center" android:textColor="#FFFFFF"
                android:textSize="@dimen/TITLE_FONTSIZE"/>
        <ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
                     android:layout_centerVertical="true" android:background="@drawable/btn_back"
                />
        <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:id="@+id/imgRefresh"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                android:layout_marginRight="10px" android:scaleType="fitCenter" android:src="@drawable/bk_refresh"/>
    </RelativeLayout>
    <!--首页详情 -->
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/title_layout"
            android:id="@+id/content_layout" android:layout_above="@+id/tab_layout">
        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewPhoto"
                      android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                      android:layout_marginLeft="40px" android:layout_marginTop="30px" android:scaleType="fitXY"
		                />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnPhoto" android:layout_alignTop="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto"
                        android:layout_alignBottom="@+id/viewPhoto" android:background="@drawable/btn_frame"
                        android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                        android:layout_marginBottom="-5px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30px" android:layout_alignBottom="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto">
                    <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:id="@+id/imgSex" android:layout_marginLeft="26px" android:layout_centerVertical="true"
                            android:scaleType="fitCenter" android:src="@drawable/bk_manmark"/>
                    <TextView
                            android:layout_width="35px"
                            android:layout_height="fill_parent"
                            android:text="29"
                            android:id="@+id/lblAge" android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="10px"
                            android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:id="@+id/lblName" android:layout_below="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/btnPhoto"
                        android:layout_marginTop="20px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                        android:textSize="18px"/>
                <TextView
                        android:layout_width="130px"
                        android:layout_height="30px"
                        android:id="@+id/lblDriverYears" android:layout_alignTop="@+id/btnPhoto"
                        android:layout_toRightOf="@+id/lblName" android:layout_marginLeft="20px" android:gravity="center_vertical|left"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewCar"
                      android:layout_alignTop="@+id/viewPhoto" android:layout_alignParentRight="true"
                      android:layout_marginRight="40px" android:scaleType="fitXY"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCar" android:layout_alignTop="@+id/viewCar"
                        android:layout_alignLeft="@+id/viewCar" android:layout_alignBottom="@+id/viewCar"
                        android:layout_alignRight="@+id/viewCar" android:background="@drawable/btn_frame"
                        android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                        android:layout_marginBottom="-5px"/>
                <TextView
                        android:layout_width="150px"
                        android:layout_height="30px"
                        android:id="@+id/lblEval" android:layout_below="@+id/lblDriverYears"
                        android:layout_alignLeft="@+id/lblDriverYears" android:layout_marginTop="10px" android:gravity="center_vertical|left"
                        android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="160px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblHistoryCount" android:layout_below="@+id/lblEval" android:layout_alignLeft="@+id/lblEval"
                        android:textSize="18px" android:textColor="@color/GRAY_COLOR" android:gravity="center_vertical|left"
                        android:layout_marginTop="10px"/>
	            <RelativeLayout
			            android:layout_width="wrap_content"
			            android:layout_height="40px"
			            android:layout_centerHorizontal="true"
			            android:id="@+id/carinfo_layout" android:layout_marginLeft="15px"
			            android:layout_alignTop="@+id/lblName" android:layout_toRightOf="@+id/lblName">
		            <ImageView
	                        android:layout_width="60px"
	                        android:layout_height="wrap_content"
	                        android:id="@+id/imgCarType"
	                        android:scaleType="fitCenter"
	                        android:src="@drawable/luxurycar_sel"
				            />
		            <RelativeLayout
				            android:layout_width="wrap_content"
				            android:layout_height="match_parent" android:layout_alignTop="@+id/imgCarType"
				            android:layout_alignBottom="@+id/imgCarType" android:layout_toRightOf="@+id/imgCarType"
				            android:id="@+id/brand_layout" android:layout_marginLeft="10px">
			            <ImageView
		                        android:layout_width="25px"
		                        android:layout_height="25px"
		                        android:id="@+id/imgBrand"
		                        android:scaleType="fitCenter" android:src="@drawable/bk_carbrand1"
		                        android:layout_centerVertical="true"/>
			            <TextView
					            android:layout_width="wrap_content"
					            android:layout_height="match_parent"
					            android:text="9999"
					            android:id="@+id/txt_brand" android:textSize="20px" android:textColor="#606060"
					            android:gravity="center" android:visibility="gone"/>
		            </RelativeLayout>
		            <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="30px"
	                        android:id="@+id/lblBrandName"
	                        android:layout_toRightOf="@+id/brand_layout" android:layout_marginLeft="10px" android:gravity="center"
	                        android:background="@drawable/roundsolidgreen_frame" android:textColor="@color/WHITE_COLOR"
	                        android:textSize="14px"
	                        android:layout_centerVertical="true" android:paddingLeft="5px" android:paddingRight="5px"/>
		            <TextView
	                        android:layout_width="wrap_content"
	                        android:layout_height="match_parent"
	                        android:id="@+id/lblColor"
	                        android:layout_toRightOf="@+id/lblBrandName" android:layout_marginLeft="10px" android:gravity="center"
	                        android:textColor="@color/TITLE_BACKCOLOR" android:textSize="18px"/>
	            </RelativeLayout>
	            <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1px" android:layout_below="@+id/carinfo_layout"
                        android:layout_marginLeft="20px" android:layout_marginRight="20px"
                        android:layout_marginTop="10px" android:background="@color/GRAY_COLOR"
                        android:id="@+id/rlSeparate">
                </RelativeLayout>
                <TextView
                        android:layout_width="275px"
                        android:layout_height="35px"
                        android:id="@+id/lblCardno" android:layout_alignLeft="@+id/rlSeparate"
                        android:layout_below="@+id/rlSeparate" android:layout_marginTop="10px" android:gravity="center_vertical|left"
                        android:textColor="@color/GRAY_COLOR" android:textSize="16px"/>
                <TextView
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblRunning" android:layout_alignTop="@+id/lblCardno"
                        android:layout_alignBottom="@+id/lblCardno" android:layout_alignRight="@+id/rlSeparate"
                        android:gravity="center_vertical|right" android:textColor="@color/LIGHT_YELLOW_COLOR"
                        android:textSize="24px"/>
                <TextView
                        android:layout_width="440px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblPath" android:layout_marginTop="20px"
                        android:layout_below="@+id/lblCardno" android:layout_centerHorizontal="true"
                        android:gravity="center" android:textColor="@color/GRAY_COLOR" android:textSize="24px"/>

                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:id="@+id/lblMon"
                        android:layout_alignParentLeft="true" android:layout_marginLeft="20px" android:gravity="center"
                        android:text="@string/STR_MON" android:textColor="@color/WHITE_COLOR" android:textSize="21px"
                        android:layout_below="@+id/lblPath"
                        android:layout_marginTop="20px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_TUE"
                        android:id="@+id/lblTue" android:layout_alignTop="@+id/lblMon"
                        android:layout_toRightOf="@+id/lblMon" android:layout_marginLeft="15px"
                        android:gravity="center"
                        android:textColor="@color/WHITE_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_WED"
                        android:id="@+id/lblWed" android:layout_alignTop="@+id/lblTue"
                        android:layout_toRightOf="@+id/lblTue" android:textColor="@color/WHITE_COLOR"
                        android:textSize="21px" android:gravity="center"
                        android:layout_marginLeft="15px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_THR"
                        android:id="@+id/lblThr" android:layout_alignTop="@+id/lblWed"
                        android:layout_toRightOf="@+id/lblWed" android:layout_marginLeft="15px"
                        android:gravity="center"
                        android:textColor="@color/WHITE_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_FRI"
                        android:id="@+id/lblFri" android:layout_alignTop="@+id/lblThr"
                        android:layout_toRightOf="@+id/lblThr" android:textSize="21px"
                        android:textColor="@color/TITLE_BACKCOLOR" android:gravity="center"
                        android:layout_marginLeft="15px"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_SAT"
                        android:id="@+id/lblSat" android:layout_alignTop="@+id/lblFri"
                        android:layout_toRightOf="@+id/lblFri" android:layout_marginLeft="15px"
                        android:gravity="center" android:textSize="21px"
                        android:textColor="@color/TITLE_BACKCOLOR"/>
                <TextView
                        android:layout_width="50px"
                        android:layout_height="30px"
                        android:text="@string/STR_SUN"
                        android:id="@+id/lblSun" android:layout_alignTop="@+id/lblSat"
                        android:layout_toRightOf="@+id/lblSat" android:layout_marginLeft="15px"
                        android:gravity="center"
                        android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblTime" android:layout_marginTop="20px" android:layout_below="@+id/lblMon"
                        android:layout_centerHorizontal="true" android:gravity="center" android:singleLine="false"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="400px"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblMidPos" android:layout_marginTop="5px" android:layout_below="@+id/lblTime"
                        android:layout_centerHorizontal="true" android:gravity="center"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="200px"
                        android:layout_height="35px"
                        android:id="@+id/lblCarNo" android:layout_marginTop="20px"
                        android:layout_below="@+id/lblMidPos" android:layout_alignLeft="@+id/rlSeparate"
                        android:gravity="center_vertical|left" android:textColor="@color/GRAY_COLOR"
                        android:textSize="21px"/>
                <TextView
                        android:layout_width="180px"
                        android:layout_height="35px"
                        android:id="@+id/lblElecNo" android:layout_marginTop="20px"
                        android:layout_below="@+id/lblMidPos" android:layout_alignRight="@+id/rlSeparate"
                        android:gravity="center_vertical|right" android:textColor="@color/GRAY_COLOR"
                        android:textSize="21px"/>
                <TextView
                        android:layout_width="440px"
                        android:layout_height="35px"
                        android:id="@+id/lblStatus" android:layout_marginTop="20px"
                        android:layout_below="@+id/lblElecNo" android:layout_centerHorizontal="true"
                        android:gravity="center" android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="24px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1px" android:background="@color/GRAY_COLOR"
                        android:layout_marginLeft="20px" android:layout_marginRight="20px"
                        android:layout_below="@+id/lblStatus" android:layout_marginTop="20px" android:id="@+id/relSep">
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_below="@+id/relSep"
                        android:background="@color/WHITE_COLOR" android:layout_marginTop="10px">
                    <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:id="@+id/imgCallDriver" android:layout_marginTop="25px"
                            android:layout_marginLeft="75px" android:scaleType="fitCenter"
                            android:src="@drawable/bk_driverphone"/>
                    <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:id="@+id/imgOther" android:layout_marginRight="75px"
                            android:layout_alignTop="@+id/imgCallDriver" android:layout_alignParentRight="true"
                            android:scaleType="fitCenter" android:src="@drawable/bk_driverpos"/>
                    <TextView
                            android:layout_width="330px"
                            android:layout_height="120px"
                            android:id="@+id/lblCarpool" android:layout_marginTop="25px"
                            android:layout_centerHorizontal="true" android:gravity="center"
                            android:textColor="@color/GRAY_COLOR" android:textSize="24px"/>
                    <Button
                            android:layout_width="180px"
                            android:layout_height="60px"
                            android:text="暂停一天"
                            android:id="@+id/btnPause" android:layout_marginTop="170px" android:layout_marginLeft="40px"
                            android:background="@drawable/btn_smallwhite"
                            android:textColor="@color/TITLE_BACKCOLOR" android:textSize="24px"/>
                    <Button
                            android:layout_width="180px"
                            android:layout_height="60px"
                            android:text="终止服务"
                            android:id="@+id/btnFinish"
                            android:layout_alignParentRight="true" android:layout_marginRight="40px"
                            android:layout_marginTop="170px"
                            android:textColor="@color/WHITE_COLOR" android:textSize="24px"
                            android:background="@drawable/btn_smallgreen"/>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="60px"
                            android:text="终止服务"
                            android:id="@+id/btnLongFinish" android:layout_marginTop="30px" android:layout_marginLeft="40px"
                            android:layout_marginRight="40px" android:background="@drawable/btn_white"
                            android:textColor="@color/TITLE_BACKCOLOR" android:textSize="24px"
                            android:layout_below="@+id/lblCarpool"/>
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="20px" android:id="@+id/rlSeparate2"
                            android:layout_below="@+id/btnLongFinish">
                    </RelativeLayout>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="60px"
                            android:text="@string/STR_LONGDISTANCEDETAIL_TOUSU"
                            android:id="@+id/btnTouSu" android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:textColor="@color/WHITE_COLOR" android:textSize="24px"
                            android:layout_marginTop="20px" android:layout_below="@+id/rlSeparate2"
                            android:background="@drawable/btn_green"/>
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="20px" android:layout_below="@+id/btnTouSu"
                            android:id="@+id/rlSeparate3">
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
	