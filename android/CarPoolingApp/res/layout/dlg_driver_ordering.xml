<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="400px"
                android:layout_height="250px" android:id="@+id/parent_layout"
                android:background="@drawable/roundtranparent_frame">

    <RelativeLayout
            android:layout_width="400px"
            android:layout_height="250px"
            android:background="@drawable/roundtranparent_frame">
        <ImageView
                android:layout_width="120px"
                android:layout_height="120px"
                android:id="@+id/imgProgress" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_marginTop="30px" android:scaleType="fitCenter" android:src="@drawable/bk_progress"/>
        <TextView
                android:layout_width="320px"
                android:layout_height="40px"
                android:text="@string/STR_ORDERING"
                android:id="@+id/lblTitle" android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" android:layout_marginBottom="20px" android:gravity="center"
                android:textColor="@color/WHITE_COLOR" android:textSize="24px"/>
    </RelativeLayout>
</RelativeLayout>