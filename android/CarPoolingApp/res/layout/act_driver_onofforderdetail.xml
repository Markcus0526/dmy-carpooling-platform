<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:id="@+id/parent_layout">

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/TITLE_HEIGHT"
					android:background="@color/TITLE_BACKCOLOR" android:id="@+id/title_layout">
		<TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/txt_title"
				  android:textSize="@dimen/TITLE_FONTSIZE" android:textColor="#FFFFFF" android:gravity="center"
				  android:text="@string/STR_COMMUTEORDERDETAIL_TITLE"/>
		<ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
					 android:layout_centerVertical="true" android:background="@drawable/btn_back"
				/>
		<ImageView
				android:layout_width="36px"
				android:layout_height="36px"
				android:id="@+id/imgRefresh"
				android:layout_alignParentRight="true" android:layout_centerVertical="true"
				android:layout_marginRight="10px" android:scaleType="fitCenter" android:src="@drawable/bk_refresh"/>
	</RelativeLayout>
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/title_layout"
			android:id="@+id/content_layout"
			android:background="#F1F1F1">
		<ScrollView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:id="@+id/scrollView">
			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">
				<view android:layout_width="120px"
					  android:layout_height="120px"
					  class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewPhoto"
					  android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
					  android:layout_marginLeft="40px" android:layout_marginTop="30px" android:scaleType="fitXY"/>
				<ImageButton
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/btnPhoto" android:layout_alignTop="@+id/viewPhoto"
						android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto"
						android:layout_alignBottom="@+id/viewPhoto" android:background="@drawable/btn_frame"
						android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
						android:layout_marginBottom="-5px"/>
				<RelativeLayout
						android:layout_width="fill_parent"
						android:layout_height="30px" android:layout_alignBottom="@+id/viewPhoto"
						android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto">
					<ImageView
							android:layout_width="20px"
							android:layout_height="20px"
							android:id="@+id/imgSex" android:layout_marginLeft="36px" android:layout_centerVertical="true"
							android:scaleType="fitCenter" android:src="@drawable/bk_manmark"/>
					<TextView
							android:layout_width="35px"
							android:layout_height="fill_parent"
							android:id="@+id/lblAge" android:layout_alignParentBottom="true"
							android:layout_alignParentRight="true" android:layout_marginRight="25px"
							android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
				</RelativeLayout>
				<TextView
						android:layout_width="275px"
						android:layout_height="wrap_content"
						android:id="@+id/lblCardNo"
						android:layout_marginLeft="20px" android:gravity="center_vertical|left"
						android:textColor="@color/GRAY_COLOR" android:textSize="16px" android:layout_alignTop="@+id/viewPhoto"
						android:layout_toRightOf="@+id/viewPhoto" android:layout_marginTop="20px"
						android:singleLine="true" android:ellipsize="end"/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="30px"
						android:id="@+id/lblRatio" android:layout_below="@+id/lblCardNo"
						android:layout_alignLeft="@+id/lblCardNo" android:layout_alignRight="@+id/lblCardNo"
						android:layout_marginTop="20px" android:gravity="center_vertical|left"
						android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="30px"
						android:id="@+id/lblCarpoolCount" android:layout_below="@+id/lblRatio"
						android:layout_alignLeft="@+id/lblRatio" android:layout_alignRight="@+id/lblRatio"
						android:layout_marginTop="10px" android:gravity="center_vertical|left"
						android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="30px"
						android:id="@+id/lblName" android:layout_below="@+id/viewPhoto"
						android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/btnPhoto"
						android:layout_marginTop="10px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
						android:textSize="18px"/>
				<RelativeLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_below="@+id/lblName"
						android:layout_centerHorizontal="true" android:layout_marginTop="10px"
						android:background="#F1F1F1" android:id="@+id/rlShangBian">
					<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="1px" android:layout_marginLeft="30px" android:layout_marginRight="30px"
							android:background="@color/GRAY_COLOR" android:id="@+id/relativeLayout">
					</RelativeLayout>
					<TextView
							android:layout_width="300px"
							android:layout_height="wrap_content"
							android:id="@+id/lblPath" android:layout_below="@+id/relativeLayout"
							android:layout_centerHorizontal="true" android:layout_marginTop="20px" android:gravity="center"
							android:textColor="@color/GRAY_COLOR" android:textSize="24px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_MON"
							android:id="@+id/lblMon"
							android:gravity="center" android:layout_marginLeft="20px" android:layout_marginTop="20px"
							android:layout_below="@+id/lblPath"
							android:textSize="21px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_TUE"
							android:id="@+id/lblTue" android:layout_alignTop="@+id/lblMon"
							android:layout_toRightOf="@+id/lblMon"
							android:textSize="21px" android:gravity="center"
							android:layout_marginLeft="15px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_WED"
							android:id="@+id/lblWed" android:layout_alignTop="@+id/lblTue"
							android:layout_toRightOf="@+id/lblTue" android:layout_marginLeft="15px"
							android:gravity="center"
							android:textSize="21px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_THR"
							android:id="@+id/lblThr" android:layout_alignTop="@+id/lblWed"
							android:layout_toRightOf="@+id/lblWed" android:textSize="21px"
							android:gravity="center"
							android:layout_marginLeft="15px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_FRI"
							android:id="@+id/lblFri" android:layout_alignTop="@+id/lblThr"
							android:layout_toRightOf="@+id/lblThr"
							android:layout_marginLeft="15px" android:gravity="center"
							android:textSize="21px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_SAT"
							android:id="@+id/lblSat" android:layout_alignTop="@+id/lblFri"
							android:layout_toRightOf="@+id/lblFri" android:layout_marginLeft="15px"
							android:gravity="center"
							android:textSize="21px"/>
					<TextView
							android:layout_width="50px"
							android:layout_height="30px"
							android:text="@string/STR_SUN"
							android:id="@+id/lblSun" android:layout_alignTop="@+id/lblSat"
							android:layout_toRightOf="@+id/lblSat" android:textSize="21px"
							android:gravity="center"
							android:layout_marginLeft="15px"/>
					<TextView
							android:layout_width="350px"
							android:layout_height="30px"
							android:id="@+id/lblCardOutDate" android:layout_below="@+id/lblMon"
							android:layout_centerHorizontal="true" android:layout_marginTop="20px" android:gravity="center"
							android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
					<TextView
							android:layout_width="350px"
							android:layout_height="35px"
							android:id="@+id/lblPrecDate" android:layout_marginTop="10px"
							android:layout_below="@+id/lblCardOutDate" android:layout_centerHorizontal="true"
							android:gravity="center" android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
					<TextView
							android:layout_width="350px"
							android:layout_height="30px"
							android:id="@+id/lblMidStation" android:layout_below="@+id/lblPrecDate"
							android:layout_centerHorizontal="true" android:textSize="21px"
							android:textColor="@color/GRAY_COLOR" android:layout_marginTop="20px" android:gravity="center"
							android:singleLine="true" android:ellipsize="end"/>
					<TextView
							android:layout_width="300px"
							android:layout_height="40px"
							android:id="@+id/lblMark" android:layout_below="@+id/lblMidStation"
							android:layout_marginTop="10px" android:layout_marginLeft="110px"
							android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="24px" android:gravity="center"
							android:layout_centerHorizontal="true"/>
					<TextView
							android:layout_width="300px"
							android:layout_height="35px"
							android:id="@+id/lblSiteMark"
							android:textSize="21px" android:textColor="@color/GRAY_COLOR" android:gravity="center"
							android:layout_below="@+id/lblMark"
							android:layout_centerHorizontal="true" android:layout_marginTop="10px"/>
					<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="1px" android:layout_marginLeft="30px"
							android:layout_marginRight="30px" android:layout_below="@+id/lblSiteMark"
							android:layout_marginTop="30px" android:id="@+id/rlSeparate1"
							android:background="@color/GRAY_COLOR">
					</RelativeLayout>
					<TextView
							android:layout_width="350px"
							android:layout_height="30px"
							android:id="@+id/lblTotalCarPool" android:layout_marginTop="30px"
							android:layout_below="@+id/rlSeparate1" android:layout_centerHorizontal="true"
							android:gravity="center" android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
					<TextView
							android:layout_width="350px"
							android:layout_height="30px"
							android:id="@+id/lblEval" android:layout_marginTop="5px"
							android:layout_below="@+id/lblTotalCarPool" android:layout_centerHorizontal="true"
							android:gravity="center" android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
					<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="20px" android:layout_below="@+id/lblEval" android:id="@+id/rlBottom">
					</RelativeLayout>
				</RelativeLayout>
				<RelativeLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_below="@+id/rlShangBian"
						android:background="@color/BASE_BACK_COLOR" android:id="@+id/rlXiaBian">
					<ImageView
							android:layout_width="150px"
							android:layout_height="150px"
							android:id="@+id/imgPassPhone" android:layout_alignParentTop="true"
							android:layout_alignParentLeft="true" android:layout_marginLeft="40px"
							android:layout_marginTop="30px" android:scaleType="fitCenter" android:src="@drawable/bk_passphone"/>
					<ImageView
							android:layout_width="150px"
							android:layout_height="150px"
							android:id="@+id/imgRunCard" android:layout_alignTop="@+id/imgPassPhone"
							android:layout_alignParentRight="true" android:layout_marginRight="40px"
							android:scaleType="fitCenter" android:src="@drawable/bk_runorder"/>
					<Button
							android:layout_width="400px"
							android:layout_height="60px"
							android:text="@string/STR_COMMUTEORDERDETAIL_FINISH"
							android:id="@+id/btnCancel" android:layout_below="@+id/imgPassPhone"
							android:layout_centerHorizontal="true" android:layout_marginTop="30px"
							android:textColor="@color/TITLE_BACKCOLOR" android:textSize="24px"
							android:background="@drawable/roundgreenwhite_frame"/>
					<Button
							android:layout_width="400px"
							android:layout_height="60px"
							android:text="@string/STR_COMMUTEORDERDETAIL_OK"
							android:id="@+id/btnOk" android:layout_marginTop="20px"
							android:background="@drawable/roundsolidgreen_frame"
							android:textColor="@color/WHITE_COLOR" android:textSize="24px"
							android:layout_centerHorizontal="true" android:layout_below="@+id/btnCancel"/>
					<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="20px" android:layout_below="@+id/btnOk">
					</RelativeLayout>
				</RelativeLayout>
			</RelativeLayout>
		</ScrollView>
	</RelativeLayout>
</RelativeLayout>