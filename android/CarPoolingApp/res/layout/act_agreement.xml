<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/parent_layout"
                android:background="#F1F1F1">

	<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/TITLE_HEIGHT"
	        android:background="@color/TITLE_BACKCOLOR"
            android:id="@+id/title_layout">
		<TextView
                android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/txt_title"
		          android:textSize="@dimen/TITLE_FONTSIZE" android:textColor="#FFFFFF" android:gravity="center"
		          android:text="@string/STR_AGREEMENT_TITLE"/>
		<ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
		             android:layout_centerVertical="true" android:background="@drawable/btn_back"/>
	</RelativeLayout>
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/content_layout"
			android:layout_below="@+id/title_layout">
		<ImageView
				android:layout_width="440px"
				android:layout_height="match_parent"
				android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
				android:background="@drawable/imgback_high"/>
		<ScrollView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/scrollView"
                android:layout_alignLeft="@+id/imageView"
				android:layout_alignRight="@+id/imageView"
                android:layout_alignTop="@+id/imageView"
				android:layout_alignBottom="@+id/imageView"
                android:layout_margin="4px">


                    <WebView
                            android:id="@+id/wb_treaty"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                    </WebView>
		</ScrollView>
	</RelativeLayout>
</RelativeLayout>