<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/TITLE_HEIGHT"
                    android:background="@color/TITLE_BACKCOLOR" android:id="@+id/title_layout">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/txt_title"
                  android:textSize="@dimen/TITLE_FONTSIZE" android:textColor="#FFFFFF" android:gravity="center"
                  android:text="@string/STR_SXBPCYY"/>
        <ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
                     android:layout_centerVertical="true" android:background="@drawable/btn_back"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/title_layout"
            android:id="@+id/content_layout" android:background="#F1F1F1">
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewPhoto"
                      android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                      android:layout_marginLeft="40px" android:layout_marginTop="30px" android:scaleType="fitXY"
		                />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnPhoto" android:layout_alignTop="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto"
                        android:layout_alignBottom="@+id/viewPhoto" android:background="@drawable/btn_frame"
                        android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                        android:layout_marginBottom="-5px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30px" android:layout_alignBottom="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/viewPhoto">
                    <ImageView
                            android:layout_width="20px"
                            android:layout_height="20px"
                            android:id="@+id/imgSex" android:layout_marginLeft="28px" android:layout_centerVertical="true"
                            android:scaleType="fitCenter" android:src="@drawable/bk_manmark"
                            android:layout_alignParentLeft="true"/>
                    <TextView
                            android:layout_width="35px"
                            android:layout_height="fill_parent"
                            android:id="@+id/lblAge" android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="12px"
                            android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30px"
                        android:id="@+id/lblName" android:layout_below="@+id/viewPhoto"
                        android:layout_alignLeft="@+id/viewPhoto" android:layout_alignRight="@+id/btnPhoto"
                        android:layout_marginTop="20px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                        android:textSize="18px"/>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_below="@+id/lblName"
                        android:layout_centerHorizontal="true" android:layout_marginTop="20px"
                        android:background="#F1F1F1" android:id="@+id/rlShangBian">
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="1px" android:layout_marginLeft="30px" android:layout_marginRight="30px"
                            android:background="@color/GRAY_COLOR" android:id="@+id/relativeLayout">
                    </RelativeLayout>
                    <TextView
                            android:layout_width="300px"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblPath" android:layout_below="@+id/relativeLayout"
                            android:layout_centerHorizontal="true" android:layout_marginTop="20px" android:gravity="center"
                            android:textColor="@color/GRAY_COLOR" android:textSize="24px"/>
                    <TextView
                            android:layout_width="350px"
                            android:layout_height="30px"
                            android:id="@+id/lblMidStation" android:layout_below="@+id/lblPath"
                            android:layout_centerHorizontal="true" android:textSize="21px"
                            android:textColor="@color/GRAY_COLOR" android:layout_marginTop="10px" android:gravity="center"
                            android:singleLine="true" android:ellipsize="end"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:id="@+id/lblMon"
                            android:layout_alignParentLeft="true" android:layout_marginLeft="20px" android:gravity="center"
                            android:text="@string/STR_MON" android:textColor="@color/WHITE_COLOR" android:textSize="21px"
                            android:background="@drawable/bk_selday" android:layout_below="@+id/lblMidStation"
                            android:layout_marginTop="10px"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:text="@string/STR_TUE"
                            android:id="@+id/lblTue" android:layout_alignTop="@+id/lblMon"
                            android:layout_toRightOf="@+id/lblMon" android:layout_marginLeft="15px"
                            android:background="@drawable/bk_selday" android:gravity="center"
                            android:textColor="@color/WHITE_COLOR" android:textSize="21px"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:text="@string/STR_WED"
                            android:id="@+id/lblWed" android:layout_alignTop="@+id/lblTue"
                            android:layout_toRightOf="@+id/lblTue" android:textColor="@color/WHITE_COLOR"
                            android:textSize="21px" android:gravity="center" android:background="@drawable/bk_selday"
                            android:layout_marginLeft="15px"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:text="@string/STR_THR"
                            android:id="@+id/lblThr" android:layout_alignTop="@+id/lblWed"
                            android:layout_toRightOf="@+id/lblWed" android:layout_marginLeft="15px"
                            android:background="@drawable/bk_diselday" android:gravity="center"
                            android:textColor="@color/WHITE_COLOR" android:textSize="21px"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:text="@string/STR_FRI"
                            android:id="@+id/lblFri" android:layout_alignTop="@+id/lblThr"
                            android:layout_toRightOf="@+id/lblThr" android:textSize="21px"
                            android:textColor="@color/TITLE_BACKCOLOR" android:gravity="center"
                            android:background="@drawable/bk_normday" android:layout_marginLeft="15px"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:text="@string/STR_SAT"
                            android:id="@+id/lblSat" android:layout_alignTop="@+id/lblFri"
                            android:layout_toRightOf="@+id/lblFri" android:layout_marginLeft="15px"
                            android:background="@drawable/bk_normday" android:gravity="center" android:textSize="21px"
                            android:textColor="@color/TITLE_BACKCOLOR"/>
                    <TextView
                            android:layout_width="50px"
                            android:layout_height="30px"
                            android:text="@string/STR_SUN"
                            android:id="@+id/lblSun" android:layout_alignTop="@+id/lblSat"
                            android:layout_toRightOf="@+id/lblSat" android:layout_marginLeft="15px"
                            android:background="@drawable/bk_normday" android:gravity="center"
                            android:textColor="@color/TITLE_BACKCOLOR" android:textSize="21px"/>
                    <TextView
                            android:layout_width="300px"
                            android:layout_height="40px"
                            android:id="@+id/lblTime"
                            android:layout_marginLeft="30px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                            android:textSize="18px" android:layout_below="@+id/lblMon" android:layout_marginTop="10px"
                            android:layout_centerHorizontal="true"/>
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="20px" android:layout_below="@+id/lblTime">
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_below="@+id/rlShangBian"
                        android:background="@color/BASE_BACK_COLOR" android:id="@+id/rlXiaBian"
                        android:paddingBottom="15px">
                    <view android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          class="com.baidu.mapapi.map.MapView" android:id="@+id/viewMap" android:layout_alignParentTop="true"
                          android:layout_alignParentLeft="true" android:layout_alignTop="@+id/rlMapView"
                          android:layout_alignLeft="@+id/rlMapView" android:layout_alignBottom="@+id/rlMapView"
                          android:layout_alignRight="@+id/rlMapView" android:layout_margin="10px"/>
                    <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="250px"
                            android:id="@+id/rlMapView"
                            >
                    </RelativeLayout>
                    <Button
                            android:layout_width="440px"
                            android:layout_height="60px"
                            android:text="@string/STR_YUYUE"
                            android:id="@+id/btnOrder"
                            android:background="@drawable/roundsolidgreen_frame" android:textColor="@color/WHITE_COLOR"
                            android:textSize="24px" android:layout_alignParentRight="false"
                            android:layout_below="@+id/rlMapView" android:layout_marginTop="10px"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="130px"
                        android:layout_height="30px"
                        android:id="@+id/lblDriverYears" android:layout_alignTop="@+id/btnPhoto"
                        android:layout_toRightOf="@+id/lblName" android:layout_marginLeft="20px" android:gravity="center_vertical|left"
                        android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
                <view android:layout_width="100px"
                      android:layout_height="100px"
                      class="com.damytech.Utils.image.SmartImageView" android:id="@+id/viewCar"
                      android:layout_alignTop="@+id/viewPhoto" android:layout_alignParentRight="true"
                      android:layout_marginRight="40px" android:scaleType="fitXY"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnCar" android:layout_alignTop="@+id/viewCar"
                        android:layout_alignLeft="@+id/viewCar" android:layout_alignBottom="@+id/viewCar"
                        android:layout_alignRight="@+id/viewCar" android:background="@drawable/btn_frame"
                        android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                        android:layout_marginBottom="-5px" android:enabled="false"/>
                <TextView
                        android:layout_width="150px"
                        android:layout_height="30px"
                        android:id="@+id/lblEval" android:layout_below="@+id/lblDriverYears"
                        android:layout_alignLeft="@+id/lblDriverYears" android:layout_marginTop="10px" android:gravity="center_vertical|left"
                        android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
                <TextView
                        android:layout_width="130px"
                        android:layout_height="30px"
                        android:id="@+id/lblHistoryCount" android:layout_below="@+id/lblEval" android:layout_alignLeft="@+id/lblEval"
                        android:textSize="18px" android:textColor="@color/GRAY_COLOR" android:gravity="center_vertical|left"
                        android:layout_marginTop="10px"/>
                <ImageView
                        android:layout_width="60px"
                        android:layout_height="25px"
                        android:id="@+id/imgCarType" android:layout_above="@+id/rlShangBian"
                        android:layout_toRightOf="@+id/lblName" android:layout_marginLeft="20px" android:scaleType="fitCenter"
                        android:src="@drawable/luxurycar_sel"/>
	            <RelativeLayout
			            android:layout_width="wrap_content"
			            android:layout_height="25px" android:layout_alignTop="@+id/imgCarType"
			            android:layout_toRightOf="@+id/imgCarType"
			            android:id="@+id/brand_layout" android:layout_marginLeft="10px">
		            <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:id="@+id/txtBrand" android:layout_centerInParent="true"
				            android:textColor="#707070" android:textSize="21px"/>
		            <ImageView
	                        android:layout_width="25px"
	                        android:layout_height="25px"
	                        android:id="@+id/imgBrand"
	                        android:scaleType="fitCenter" android:src="@drawable/bk_carbrand1"
	                        android:layout_centerInParent="true"/>
	            </RelativeLayout>
	            <TextView
                        android:layout_width="60px"
                        android:layout_height="25px"
                        android:id="@+id/lblBrandName" android:layout_alignTop="@+id/brand_layout"
                        android:layout_toRightOf="@+id/brand_layout" android:layout_marginLeft="10px" android:gravity="center"
                        android:background="@drawable/roundsolidgreen_frame" android:textColor="@color/WHITE_COLOR"
                        android:textSize="14px" android:singleLine="true" android:ellipsize="end"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25px"
                        android:id="@+id/lblColor" android:layout_alignTop="@+id/lblBrandName"
                        android:layout_toRightOf="@+id/lblBrandName" android:layout_marginLeft="10px" android:gravity="center"
                        android:textColor="@color/TITLE_BACKCOLOR" android:textSize="18px" android:singleLine="true"
                        android:ellipsize="end"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>