<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/parent_layout">

	<RelativeLayout android:layout_width="fill_parent" android:layout_height="@dimen/TITLE_HEIGHT"
	                android:background="@color/TITLE_BACKCOLOR" android:id="@+id/title_layout">
		<TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/txt_title"
		          android:textSize="@dimen/TITLE_FONTSIZE" android:textColor="#FFFFFF" android:gravity="center"
		          android:text="@string/STR_PASSENGERINFO_TITLE"/>
		<ImageButton android:layout_width="50px" android:layout_height="50px" android:id="@+id/btn_back"
		             android:layout_centerVertical="true" android:background="@drawable/btn_back"/>
	</RelativeLayout>
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_below="@+id/title_layout"
			android:id="@+id/content_layout" android:background="#F1F1F1">
        <view android:layout_width="120px"
              android:layout_height="120px"
              class="com.damytech.Utils.image.SmartImageView" android:id="@+id/img_psg_photo"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_marginLeft="30px" android:layout_marginTop="30px" android:scaleType="fitXY"
		        />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnPhoto" android:layout_alignTop="@+id/img_psg_photo"
                android:layout_alignLeft="@+id/img_psg_photo" android:layout_alignRight="@+id/img_psg_photo"
                android:layout_alignBottom="@+id/img_psg_photo" android:background="@drawable/photo_frame_normal"
                android:layout_marginLeft="-5px" android:layout_marginTop="-5px" android:layout_marginRight="-5px"
                android:layout_marginBottom="-5px"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30px" android:layout_alignBottom="@+id/img_psg_photo"
                android:layout_alignLeft="@+id/img_psg_photo" android:layout_alignRight="@+id/img_psg_photo">
            <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:id="@+id/imgSex" android:layout_marginLeft="36px" android:layout_centerVertical="true"
                    android:scaleType="fitCenter" android:src="@drawable/bk_manmark"/>
            <TextView
                    android:layout_width="35px"
                    android:layout_height="fill_parent"
                    android:text="29"
                    android:id="@+id/lblAge" android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="25px"
                    android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="20px" android:gravity="center_vertical|left"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="35px"
                android:layout_height="35px"
                android:id="@+id/imgSecurity"
                android:scaleType="fitCenter"
                android:src="@drawable/bk_person_verified" android:layout_alignTop="@+id/img_psg_photo"
                android:layout_toRightOf="@+id/img_psg_photo" android:layout_marginLeft="50px"
                android:layout_marginTop="15px"/>
        <TextView
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:text="@string/STR_PASSENGERINFO_AUTHENTICATED"
                android:id="@+id/lblSecurity" android:layout_alignTop="@+id/imgSecurity"
                android:layout_toRightOf="@+id/imgSecurity" android:layout_alignBottom="@+id/imgSecurity"
                android:layout_marginLeft="15px" android:gravity="center_vertical|left"
                android:textColor="@color/GRAY_COLOR" android:textSize="21px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:text="@string/STR_PASSENGERINFO_EVALRATIO"
                android:id="@+id/lblRatio" android:layout_below="@+id/lblSecurity"
                android:layout_alignLeft="@+id/lblSecurity"
                android:layout_marginTop="20px" android:gravity="center_vertical|left"
                android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:text="@string/STR_PASSENGERINFO_CARPOOLCOUNT"
                android:id="@+id/lblCarpoolCount" android:layout_below="@+id/lblRatio"
                android:layout_alignLeft="@+id/lblRatio"
                android:layout_marginTop="10px" android:gravity="center_vertical|left"
                android:textColor="@color/LIGHT_YELLOW_COLOR" android:textSize="21px"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:text="张先生"
                android:id="@+id/lblName" android:layout_below="@+id/img_psg_photo"
                android:layout_alignLeft="@+id/img_psg_photo" android:layout_alignRight="@+id/btnPhoto"
                android:layout_marginTop="10px" android:gravity="center" android:textColor="@color/GRAY_COLOR"
                android:textSize="18px"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_below="@+id/lblName"
                android:layout_centerHorizontal="true" android:layout_marginTop="10px"
                android:background="@color/BASE_BACK_COLOR" android:id="@+id/rlContent">
            <view android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  class="com.damytech.Utils.Android_PullToRefresh.PullToRefreshListView" android:id="@+id/eval_list"
                  android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		            />
        </RelativeLayout>
		<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:id="@+id/detail_layout" android:background="#50000000"
                >
			<RelativeLayout
					android:layout_width="440px"
					android:layout_height="wrap_content"
					android:background="@drawable/roundgreenwhite_frame" android:layout_centerInParent="true"
					android:paddingBottom="30px">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/txt_name" android:layout_marginLeft="20px" android:layout_marginTop="20px"
						android:textColor="#505050" android:textSize="25px" android:gravity="center_vertical"/>
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/txt_time" android:layout_alignTop="@+id/txt_name"
						android:layout_alignBottom="@+id/txt_name" android:layout_toRightOf="@+id/txt_name"
						android:layout_marginRight="20px" android:layout_alignParentRight="true"
						android:gravity="center_vertical|right" android:textColor="#505050" android:textSize="23px"/>
				<ImageView android:layout_width="24px" android:layout_height="24px" android:id="@+id/imgGoodEval"
				           android:layout_below="@+id/txt_name" android:layout_alignParentLeft="true"
				           android:layout_marginLeft="25px" android:layout_marginTop="30px"
				           android:scaleType="fitCenter" android:src="@drawable/radiobox_roundsel"/>
				<ImageView android:layout_width="30px" android:layout_height="30px"
				           android:id="@+id/imgGoodEvalIcon"
				           android:layout_toRightOf="@+id/imgGoodEval"
				           android:layout_marginLeft="5px" android:scaleType="fitCenter"
				           android:src="@drawable/bk_goodsmalleval" android:layout_alignTop="@+id/imgGoodEval"
				           android:layout_marginTop="-3px"/>
				<TextView android:layout_width="40px" android:layout_height="wrap_content"
				          android:text="@string/STR_EVALPASS_GOOD" android:id="@+id/lblGoodEval"
				          android:layout_alignTop="@+id/imgGoodEvalIcon"
				          android:layout_toRightOf="@+id/imgGoodEvalIcon"
				          android:layout_alignBottom="@+id/imgGoodEvalIcon" android:layout_marginLeft="5px"
				          android:textColor="@color/GRAY_COLOR" android:textSize="18px"
				          android:gravity="center_vertical|left"/>
				<ImageView android:layout_width="24px" android:layout_height="24px" android:id="@+id/imgNormalEval"
				           android:layout_toRightOf="@+id/lblGoodEval"
				           android:scaleType="fitCenter"
				           android:src="@drawable/radiobox_roundnormal" android:layout_marginLeft="40px"
				           android:layout_alignTop="@+id/imgGoodEval"/>
				<ImageView android:layout_width="30px" android:layout_height="30px"
				           android:id="@+id/imgNormalEvalIcon"
				           android:layout_toRightOf="@+id/imgNormalEval" android:layout_marginLeft="5px"
				           android:scaleType="fitCenter"
				           android:src="@drawable/bk_normaleval" android:layout_marginTop="-3px"
				           android:layout_alignTop="@+id/imgNormalEval"/>
				<TextView android:layout_width="40px" android:layout_height="wrap_content"
				          android:text="@string/STR_EVALPASS_NORMAL" android:id="@+id/lblNormalEval"
				          android:layout_alignTop="@+id/imgNormalEvalIcon"
				          android:layout_toRightOf="@+id/imgNormalEvalIcon"
				          android:layout_alignBottom="@+id/imgNormalEvalIcon" android:gravity="center_vertical|left"
				          android:textColor="@color/GRAY_COLOR" android:textSize="18px"
				          android:layout_marginLeft="5px"/>
				<ImageView android:layout_width="24px" android:layout_height="24px" android:id="@+id/imgBadEval"
				           android:layout_toRightOf="@+id/lblNormalEval"
				           android:layout_marginLeft="40px"
				           android:scaleType="fitCenter" android:src="@drawable/radiobox_roundnormal"
				           android:layout_alignTop="@+id/lblGoodEval"/>
				<ImageView android:layout_width="30px" android:layout_height="30px" android:id="@+id/imgBadEvalIcon"
				           android:layout_toRightOf="@+id/imgBadEval"
				           android:scaleType="fitCenter" android:src="@drawable/bk_badeval"
				           android:layout_marginLeft="5px" android:layout_marginTop="-3px"
				           android:layout_alignTop="@+id/imgBadEval"/>
				<TextView android:layout_width="40px" android:layout_height="wrap_content"
				          android:text="@string/STR_EVALPASS_BAD" android:id="@+id/lblBadEval"
				          android:layout_alignTop="@+id/imgBadEvalIcon"
				          android:layout_toRightOf="@+id/imgBadEvalIcon"
				          android:layout_alignBottom="@+id/imgBadEvalIcon" android:layout_marginLeft="5px"
				          android:gravity="center_vertical|left" android:textColor="@color/GRAY_COLOR"
				          android:textSize="18px"/>
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text=" "
						android:id="@+id/txt_content" android:textColor="#505050" android:textSize="23px"
						android:layout_below="@+id/imgGoodEval" android:layout_marginLeft="20px"
						android:layout_marginTop="30px" android:layout_marginRight="20px"
						/>
			</RelativeLayout>
		</RelativeLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼友还没有得到任何评价"
                android:id="@+id/lblNoData" android:textSize="25px" android:layout_alignTop="@+id/rlContent"
                android:layout_margin="10px" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>