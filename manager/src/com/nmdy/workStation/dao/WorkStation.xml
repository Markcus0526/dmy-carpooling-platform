<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nmdy.workStation.dao.WorkStationDao">
	<resultMap id="clientAccountMap" type="ClientAccount">
		<id column="id" property="id" />
		<result column="req_num" property="reqNum" />
		<result column="account" property="account" />
		<result column="account_type" property="accountType" />
		<result column="user_id" property="userId" />
		<result column="sum" property="sum" />
		<result column="oper" property="oper" />
		<result column="req_date" property="reqDate" />
		<result column="audit_date" property="auditDate" />
		<result column="status" property="status" />
		<result column="oper_type" property="operType" />
		<result column="channel" property="channel" />
		<result column="req_cause" property="reqCause" />
		<result column="order_cs_id" property="orderCsId" />
		<result column="reject_cause" property="rejectCause" />
		<result column="ts_id" property="tsId" />
		<result column="req_user" property="reqUser" />
		<result column="auditor" property="auditor" />
		<result column="req_source" property="reqSource" />
		<result column="remark" property="remark" />
		<result column="deleted" property="deleted" />
		<result column="username" property="username" />
	</resultMap>

	<select id="selectAll" parameterType="hashmap" resultMap="clientAccountMap">
	 select a.*,b.username from req_client_account a left join user b
	 on a.user_id = b.id
	<if test='status != 0 and status!=null'> where a.status=1</if>
	<if test='page != null'>
		<if test='rows != null'>
			LIMIT #{page},#{rows}
		</if>
	</if>
	</select>

	<select id="countAll" parameterType="hashmap" resultType="int">
		select count(*) from req_client_account where 1=1
		<if test='status != 0 and status!=null'> and status=1</if>
	</select>
	
	<select id="selectAllUser" parameterType="hashmap" resultType="User">
	 select * from user 
	<if test='status != 0 and status!=null'> where driver_verified=2 or  person_verified=2</if>
	<if test='page != null'>
		<if test='rows != null'>
			LIMIT #{page},#{rows}
		</if>
	</if>
	</select>

	<select id="countAllUser" parameterType="hashmap" resultType="int">
		select count(*) from user where 1=1
		<if test='status != 0 and status!=null'> and (driver_verified=2 or person_verified=2)</if>
	</select>
	
	<select id="countOrder" parameterType="int" resultType="int">
		select count(*) from order_exec_cs where status = #{status}
		and date(cr_date)=CURDATE() 
	</select>
</mapper>

