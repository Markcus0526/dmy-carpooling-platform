<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
      "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
      "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="pinche-default" extends="struts-default,json-default">

		<!-- 定义全局处理结果 -->

		<global-results>

			<!-- 逻辑名为sql的结果，映射到/exception.jsp页面 -->

			<result name="sql">
				/WEB-INF/jsp/exception.jsp
			</result>

			<result name="error" type="chain">

				<param name="actionName">
					error
				</param>

				<param name="namespace">
					/
				</param>
			</result>

			<result name="logout" type="chain">

				<param name="actionName">
					logout
				</param>

				<param name="namespace">
					/
				</param>
			</result>
		</global-results>

		<global-exception-mappings>

			<!-- 当Action抛出SQLException异常时，转入名为sql的结果 -->

			<exception-mapping exception="java.sql.SQLException"
				result="sql" />
		</global-exception-mappings>
	</package>

	<package name="default" extends="pinche-default" namespace="/">

		<action name="index" class="com.pinche.authority.manager.action.LoginAction"
			method="index">

			<result name="login">
				/WEB-INF/jsp/login/login.jsp
			</result>

			<result name="logged_manager">
				/WEB-INF/jsp/main/main.jsp
			</result>
		</action>

		<action name="login" class="com.nmdy.login.action.LoginAction"
			method="login">

			<result name="auth_failed">
				/WEB-INF/jsp/login/login.jsp
			</result>

			<result name="auth_success">
				/WEB-INF/jsp/main/main.jsp
			</result>
		</action>

		<action name="logout" class="com.pinche.authority.manager.action.LoginAction"
			method="logout">

			<result name="success">
				/WEB-INF/jsp/index.jsp
			</result>
		</action>
		
			<action name="editpassword" class="com.pinche.authority.manager.action.LoginAction"
			method="editpassword">
			<result name="editpassword" type="json">
				<param name="root">rObj</param>
			</result>
		</action>
		
		

		<action name="error" class="com.pinche.authority.manager.action.LoginAction"
			method="error">

			<result name="success">
				/WEB-INF/jsp/error.jsp
			</result>
		</action>

		<action name="sum" class="demo.FirstAction">

			<result name="positive">
				/WEB-INF/jsp/positive.jsp
			</result>

			<result name="negative">
				/WEB-INF/jsp/negative.jsp
			</result>
		</action>

		<action name="sub" class="demo.FirstAction" method="sub">

			<result name="positive">
				/WEB-INF/jsp/positive.jsp
			</result>

			<result name="negative">
				/WEB-INF/jsp/negative.jsp
			</result>
		</action>
	</package>

	<package name="myPackage" extends="json-default" namespace="/json">

		<action name="testJson" class="demo.JsonTestAction" method="testJson">

			<result name="ddd" type="json">

				<param name="root">
					resultObj
				</param>
			</result>
		</action>
	</package>

	<include file="struts-config/struts-sysmanage-module.xml" />

	<include file="struts-config/struts-authority-module.xml" />

	<include file="struts-config/struts-customer-module.xml" />

	<include file="struts-config/struts-financial-module.xml" />

	<constant name="struts.multipart.maxSize" value="50000000" />

	<include file="struts-config/struts-operation-module.xml" />

	<include file="struts-config/struts-order-module.xml" />

	<include file="struts-config/struts-spread-module.xml" />

	<include file="struts-config/struts-statistics-module.xml" />

	<include file="struts-config/struts-role-module.xml" />
	<include file="struts-config/struts-index-module.xml" />

</struts>