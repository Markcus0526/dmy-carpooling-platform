  <display-name>
bk
    </display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
WEB-INF/config/applicationContext.xml
        </param-value>
  </context-param>
  <listener>
    <listener-class>
org.springframework.web.context.ContextLoaderListener
        </listener-class>
  </listener>
  
