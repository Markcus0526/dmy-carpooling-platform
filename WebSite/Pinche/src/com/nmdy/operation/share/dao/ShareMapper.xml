<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nmdy.operation.share.dao.ShareMapper" >

    <resultMap
        id="ShResult"
        type="com.nmdy.operation.share.dao.ShareEntity" >

        <result
            column="code"
            property="code" />

        <result
            column="deleted"
            property="deleted" />

        <result
            column="value"
            property="value" />

        <result
            column="id"
            property="id" />
    </resultMap>
    <!-- 页面显示信息查询 -->

    <select
        id="findvalue"
        parameterType="int"
        resultMap="ShResult" >
	select id ,code, deleted,value from environment where id in(3,4,5) and deleted=0
    </select>
    <!-- 保存 -->

    <update
        id="update1"
        parameterType="String" >
	update environment	

        <set>
	value=#{xxx}
        </set>
	 where id = 3
    </update>

    <update
        id="update2"
        parameterType="String" >
	update environment	

        <set>
	value=#{xex}
        </set>
	 where id = 4
    </update>

    <update
        id="update3"
        parameterType="String" >
	update environment	

        <set>
	value=#{x}
        </set>
	 where id = 5
    </update>

</mapper>